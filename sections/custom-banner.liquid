<section class="section--main">
<div class="container-fluid">
<div class="main-content">
{% if section.settings.section-heading != blank %}
  <div class="row align-items-center"> 
    <div class="col-xl-6 col-lg-12"> 
      <div class="main-text">     
        <h3>{{ section.settings.section-heading }}</h2>
        {% endif %}
        {% if section.settings.section-large-heading != blank %}
        <h1>{{ section.settings.section-large-heading }}</h1>
        {% endif %}
        {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.view-btn != blank %}
        <a class="theme-btn" href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
        {% endif %}
      </div>
    </div>

    <div class="col-xl-6 col-lg-12 text-center">
      <figure>
          {{ section.settings.ban-image | image_url : width: 100  | image_tag:
              class: "img-fluid main-img",
              alt: section.settings.image.alt | escape
          }}
      </figure>
    </div>
</div>
</div>
</div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
"name": "Welcome", // Section name
"settings": [
{
"id": "section-heading",
"type": "text",
"label": "Heading 1"
},
{
"id": "section-large-heading",
"type": "text",
"label": "Heading 2"
},
{
"id": "description",
"type": "textarea",
"label": "Description"
},
{
"id": "view-btn-link",
"type": "url",
"label": "Button URL"
},
{
"id": "view-btn",
"type": "text",
"label": "Button name"
},
{
"id": "ban-image",
"type": "image_picker",
"label": "Banner Image"
}
],
"presets": [
  {
  "name": "Welcome Section",
  "category": "ADVANCED LAYOUT"
  } 
]
}
{% endschema %}
