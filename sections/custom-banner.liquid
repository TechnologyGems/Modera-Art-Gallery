<section class="section--main">
<div class="container-fluid">
<div class="main-content">
{% if section.settings.section-heading != blank %}
  <div class="row align-items-center"> 
    <div class="col-xl-6 col-lg-12"> 
      <div class="main-text">     
        <h3>{{ section.settings.section-heading }}</h2>
        {% endif %}
        {% if section.settings.section-large-heading != blank %}
        <h1>{{ section.settings.section-large-heading }}</h1>
        {% endif %}
        {% if section.settings.description != blank %}
        <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.view-btn != blank %}
        <a class="theme-btn" href="{{ section.settings.view-btn-link }}">{{ section.settings.view-btn }}</a>
        {% endif %}
      </div>
    </div>

    <div class="col-xl-6 col-lg-12 text-center">
      <figure>
          {{ section.settings.ban-image | image_url : width: 780  | image_tag:
              class: "img-fluid main-img",
              alt: section.settings.image.alt | escape
          }}
      </figure>
    </div>
</div>
</div>
</div>
</section>
<!-- Welcome section ends -->
{% schema %}
{
"name": "Welcome", // Section name
"settings": [
{
"id": "section-heading",
"type": "text",
"label": "Heading 1"
},
{
"id": "section-large-heading",
"type": "text",
"label": "Heading 2"
},
{
"id": "description",
"type": "textarea",
"label": "Description"
},
{
"id": "view-btn-link",
"type": "url",
"label": "Button URL"
},
{
"id": "view-btn",
"type": "text",
"label": "Button name"
},
{
"id": "ban-image",
"type": "image_picker",
"label": "Banner Image"
}
],
"presets": [
{
"name": "Welcome section Test",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}
{% stylesheet %}
  /* MAIN: START */
.section--main {
}
.main-content {
  background: #eaeaea;
  padding: 9rem;
}
.main-text h3 {
  font-family: "Trajan";
  font-size: 2rem;
  font-weight: 600;
  letter-spacing: 22px;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
}
.main-text h1 {
  font-size: 5rem;
  margin-bottom: 1rem;
}
.main-text p {
  font-size: 1.125rem;
  margin-bottom: 3.313rem;
}
.main-img {
  background-blend-mode: multiply;
}
/* MAIN: END */
{% endstylesheet %}
