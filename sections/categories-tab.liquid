      <section class="section section--artist">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xl-3 col-md-12">
              <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical" >
                <div class="artist-intro">
                  <h3>Shop By Artist</h3>
                </div>
                    {% for collection in collections %}
                      {% if collection.tags contains 'artist' %}
                        <a class="nav-link" id="v-pills-{{ collection.id }}-tab" data-toggle="pill" data-target="#v-pills-{{ collection.id }}" type="button" role="tab" aria-controls="v-pills-{{ collection.id }}" aria-selected="false">{{ collection.title }}</a>
                    {% endif %}
                        {% endfor %}   
              </div>
            </div>
            <div class="col-xl-9 col-md-12">
              <div class="tab-content" id="v-pills-tabContent">
                {% for collection in collections %}
                  {% if collection.tags contains 'artist' %}
                <div class="tab-pane fade {% if count == 0  %} show active {% endif %}" id="v-pills-{{ collection.id }}" role="tabpanel" aria-labelledby="v-pills-{{ collection.id }}-tab" >
                  <div class="artist-slider">
                    {% for product in collections.all.products %}
                      {% if product.tags contains "artist" %} 
                    <div class="inner-slide">
                      <a href="{{ product.url }}">
                      <div class="artist-card">
                          {{ product | image_url: width: '440x' | image_tag }}
                          <h3>{{ product.title }}</h3>
                          <h5>{%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: true,
                    price_class: 'price--large'
                  -%}</h5>
                      </div>
                      </a>
                    </div>
                      {% endif %}
                    {% endfor %}
                  </div>
                </div>    
                      {% endif %}
                {% endfor %} 
              </div>
            </div>
          </div>
        </div>
      </section>

{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
    {
      "name": "Shop By Specific Collection",
      "category": "ADVANCED LAYOUT"
    } 
]
  }
{% endschema %}

